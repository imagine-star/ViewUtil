<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="@dimen/distance_100"
    android:layout_height="@dimen/distance_100"
    android:layout_marginStart="@dimen/distance_10"
    android:layout_marginTop="@dimen/distance_10"
    android:layout_marginEnd="@dimen/distance_10">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/distance_100"
        android:layout_height="@dimen/distance_100"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>
    
    <ImageView
        android:id="@+id/video_picture"
        android:layout_width="@dimen/distance_20"
        android:layout_height="@dimen/distance_20"
        android:layout_gravity="center"
        android:src="@drawable/video_picture"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="@dimen/distance_26"
        android:layout_height="@dimen/distance_26"
        android:padding="@dimen/distance_5"
        android:src="@drawable/status_off_icon"
        android:layout_gravity="right|top"/>

</FrameLayout>
